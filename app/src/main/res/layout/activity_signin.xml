<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SigninActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginTop="29dp"
            android:src="@drawable/muthoy_icon"/>
        <ImageView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:src="@drawable/muthoy"/>


        <TextView
            android:layout_width="78dp"
            android:layout_height="33dp"
            android:layout_marginTop="6dp"
            android:text="Sign in"
            android:textColor="@color/primaryBlackColor"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:text="Enter your user name and password"
            android:textColor="@color/primaryFillColor"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/usernameid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="@color/primaryBlackColor"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:background="@drawable/border_color1"
            android:textSize="20sp"
            android:paddingHorizontal="20dp"
            />


        <TextView
            android:id="@+id/passwordid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="@color/primaryBlackColor"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.textfield.TextInputLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/primaryRedColor">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:background="@drawable/border_color1"
                android:paddingHorizontal="20dp"/>
        </com.google.android.material.textfield.TextInputLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="100"
        android:layout_height="wrap_content"
        android:padding="18dp">
        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_check_name"
            android:background="@drawable/circle_shape"/>

   <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_weight="50"
        android:text="Remember me"
       android:textColor="@color/primaryFillColor"
        android:textSize="16dp"
       android:gravity="center"
        />
        <TextView
            android:id="@+id/forgotpasswordid"
            android:layout_width="match_parent"
            android:layout_weight="50"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textSize="16dp"
            android:gravity="center"

            />
    </LinearLayout>
    />

    <Button
        android:id="@+id/signinbtnid"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/custom_button"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="@color/primaryWhiteColor"
        android:layout_marginTop="30dp"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
       />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Or Sign in With"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:textColor="@color/primaryBlackColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/google_logo"
                />
            <View
                android:layout_width="8dp"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Google"
                android:textSize="15dp"
                android:textColor="@color/primaryFillColor"/>

        </LinearLayout>
        <View
            android:layout_width="29dp"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="149dp"
            android:layout_height="42dp"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/facebook_logo"
                />
            <View
                android:layout_width="8dp"
                android:layout_height="1dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facebook"
                android:textSize="15dp"
                android:textColor="@color/primaryFillColor"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingHorizontal="15dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="@color/primaryFillColor"
            android:textSize="16dp"
            />
        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/signupid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textSize="17dp"
            android:textColor="#EC554C"
            android:textStyle="bold"
            />


    </LinearLayout>

</LinearLayout>


