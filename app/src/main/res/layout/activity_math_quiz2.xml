<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MathQuiz2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            >
            <TextView
                android:id="@+id/timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="4.59 \n\u20b9 Sec"
                android:textColor="@color/primaryBlackColor"
                android:textStyle="bold"
                android:textSize="22dp"
                android:background="@drawable/circle_shape4"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/questions"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Question 1/20"
            android:textSize="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/border_radius"/>
    </LinearLayout>
        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="question"
            android:paddingHorizontal="100dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="22dp"
            android:textStyle="bold"
            android:textColor="@color/primaryBlackColor"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="15dp">

            <Button
                android:id="@+id/option1"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@drawable/border_color"
                android:text="Option 1"
                android:textAllCaps="false"
                android:textColor="@color/primaryFillColor"
                android:textSize="15dp" />
            <View
                android:layout_width="10dp"
                android:layout_height="1dp"/>
            <Button
                android:id="@+id/option2"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@drawable/border_color"
                android:text="Option 2"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:textColor="@color/primaryFillColor"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="1dp">

            <Button
                android:id="@+id/option3"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@drawable/border_color"
                android:text="Option 3"
                android:textAllCaps="false"
                android:textColor="@color/primaryFillColor"
                android:textSize="15dp" />
            <View
                android:layout_width="10dp"
                android:layout_height="1dp"/>
            <Button
                android:id="@+id/option4"
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:background="@drawable/border_color"
                android:text="Option 4"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:textColor="@color/primaryFillColor"/>

        </LinearLayout>

        <Button
           android:id="@+id/submitid"
            android:layout_width="330dp"
            android:layout_height="50dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="18dp"
            android:background="@drawable/spin_button"
            android:text="Submit"
            android:textAllCaps="false"
            android:textColor="@color/primaryWhiteColor" />

    </LinearLayout>

</LinearLayout>